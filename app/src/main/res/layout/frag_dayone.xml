<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_morning_tag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorOffWhite">


        <ImageView
            android:id="@+id/im_morning"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/morning_icon"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/im_morning"
            android:layout_centerHorizontal="true"
            android:text="Morning"
            android:layout_centerVertical="true"
            android:paddingTop="4dp"
            android:layout_marginLeft="6dp"/>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circular_style"
            android:layout_marginRight="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12dp"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true" />
        </RelativeLayout>



            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/cicular_syle_second"
                android:layout_marginRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_plus_minus"
                android:layout_width="20dp"
                android:layout_height="20dp">


                <ImageView
                    android:id="@+id/im_plus"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/plus_icon"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:id="@+id/im_minus"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/minus_icon"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            </LinearLayout>
    </RelativeLayout>


<RelativeLayout
    android:id="@+id/rl_tv_time_range_morning"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:layout_below="@+id/rl_morning_tag">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:text="6 AM - 12 PM"/>
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_expand_for_morning"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/rl_tv_time_range_morning"
        android:background="@color/colorOffWhite"
        android:visibility="gone">


        <RelativeLayout
            android:id="@+id/rl_simple_circule"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/simple_circule"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/capsol_icon"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_simple_circule"
            android:text="Sample"
            android:layout_marginLeft="20dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_aftermoon_tag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorOffWhite"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_expand_for_morning">


        <ImageView
            android:id="@+id/im_aftermoon"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/atermoon_icon"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/im_aftermoon"
            android:layout_centerHorizontal="true"
            android:text="Aftermoon"
            android:layout_centerVertical="true"
            android:paddingTop="4dp"
            android:layout_marginLeft="6dp"/>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circular_style"
                android:layout_marginRight="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/cicular_syle_second"
                android:layout_marginRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_plus_minus_aftermoon"
                android:layout_width="20dp"
                android:layout_height="20dp">

                <ImageView
                    android:id="@+id/im_plus_aftermoon"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/plus_icon"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:id="@+id/im_minus_aftermoon"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/minus_icon"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tv_time_range_aftermoon"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/rl_aftermoon_tag">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:text="12 PM - 5 PM"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_expand_for_aftermoon"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/rl_tv_time_range_aftermoon"
        android:background="@color/colorOffWhite"
        android:visibility="gone">


        <RelativeLayout
            android:id="@+id/rl_simple_circule_aftermoon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/simple_circule"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/capsol_icon"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_simple_circule_aftermoon"
            android:text="Sample"
            android:layout_marginLeft="20dp"/>


    </RelativeLayout>






    <RelativeLayout
        android:id="@+id/rl_evning"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorOffWhite"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_expand_for_aftermoon">


        <ImageView
            android:id="@+id/im_evening"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/evening_icon"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/im_evening"
            android:layout_centerHorizontal="true"
            android:text="Evening"
            android:layout_centerVertical="true"
            android:paddingTop="4dp"
            android:layout_marginLeft="6dp"/>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circular_style"
                android:layout_marginRight="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/cicular_syle_second"
                android:layout_marginRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_plus_minus_evening"
                android:layout_width="20dp"
                android:layout_height="20dp">

                <ImageView
                    android:id="@+id/im_plus_evning"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/plus_icon"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:id="@+id/im_minus_evning"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/minus_icon"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tv_time_range_evening"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/rl_evning">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:text="5 PM - 8 PM"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_expand_for_evening"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/rl_tv_time_range_evening"
        android:background="@color/colorOffWhite"
        android:visibility="gone">


        <RelativeLayout
            android:id="@+id/rl_simple_circule_evning"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/simple_circule"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/capsol_icon"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_simple_circule_evning"
            android:text="Sample"
            android:layout_marginLeft="20dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_night"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorOffWhite"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_expand_for_evening">


        <ImageView
            android:id="@+id/im_night"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/night_icon"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/im_night"
            android:layout_centerHorizontal="true"
            android:text="Night"
            android:layout_centerVertical="true"
            android:paddingTop="4dp"
            android:layout_marginLeft="6dp"/>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circular_style"
                android:layout_marginRight="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/cicular_syle_second"
                android:layout_marginRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_plus_minus_night"
                android:layout_width="20dp"
                android:layout_height="20dp">

                <ImageView
                    android:id="@+id/im_plus_night"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/plus_icon"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:id="@+id/im_minus_night"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/minus_icon"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tv_time_range_night"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/rl_night">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="8 PM - 6 AM"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_expand_for_night"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/rl_tv_time_range_night"
        android:background="@color/colorOffWhite"
        android:visibility="gone">


        <RelativeLayout
            android:id="@+id/rl_simple_circule_night"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/simple_circule"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/capsol_icon"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_simple_circule_night"
            android:text="Sample"
            android:layout_marginLeft="20dp"/>


    </RelativeLayout>





        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_floating"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/floating_circule"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/plus_icon_whit"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
</RelativeLayout>